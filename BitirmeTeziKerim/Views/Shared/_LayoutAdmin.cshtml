
@{
    ViewData["Title"] = "Admin Panel";

}
<!DOCTYPE html>
<html>
<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="~/fonts/icomoon/style.css" rel="stylesheet" />



    <link href="~/css/owl.carousel.min.css" rel="stylesheet" />



    <!-- Bootstrapın CSS'i -->


    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Style -->

    <link rel="stylesheet" href="~/css/style.css?Version=7" />


    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
     <style>
        #headline-panel {
            background: rgb(48,142,194);
            background: -moz-linear-gradient(90deg, rgba(48,142,194,1) 0%, rgba(38,221,216,1) 100%);
            background: -webkit-linear-gradient(90deg, rgba(48,142,194,1) 0%, rgba(38,221,216,1) 100%);
            background: linear-gradient(90deg, rgba(48,142,194,1) 0%, rgba(38,221,216,1) 100%);
          
            width: 100%;
            font-family: "Raleway";
            height: 10vh;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }
       

        
        .fa-copyright:before {
            content: ""
        }
        .copyright {
            width: 100vw;
            background: var(--darkGray);
            color: var(--white);
            font-size: 15px;
            height: 3em;
            display: flex;
            flex-direction: row;
            justify-content: center;
            align-items: center;
            font-family: 'Raleway';
            flex-wrap: wrap;
        }

            .copyright a {
                color: var(--white);
                margin: 0 5px;
            }
         body {
             background-color: #e28743;
             
         }
             body .table {
                 color:black;
                 
             }
    </style>
</head>
<body>

    <div class="w3-container">
        <div class="w3-bar w3-border w3-green w3-xlarge">
            <a asp-controller="AdminTabloes" asp-action="Index" class="w3-bar-item w3-button">Admin Giriş Sayfası</a>
            <a asp-controller="PersonelTabloes" asp-action="Index2" class="w3-bar-item w3-button">Personel Bölümü</a>
            <a asp-controller="Sayilars" asp-action="Index" class="w3-bar-item w3-button">Sayı Bölümü</a>
            <a asp-controller="SayilarTablos" asp-action="Index2" class="w3-bar-item w3-button">Sayılar Tablo Bölümü</a>
            <a asp-controller="DuyuruLinkTabloes" asp-action="Index" class="w3-bar-item w3-button">Duyuru Link Bölümü</a>
            <a asp-controller="Duyurus" asp-action="Index" class="w3-bar-item w3-button">Duyuru Sol Bölüm</a>
            <a href="/Login/LogOut/" class="w3-bar-item w3-button">Çıkış</a>
        </div>
        <div>

            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
       
        <footer style="margin-top:100%">
            <section id="headline-panel">
                <div class="copyright">
                    © Copyright -
                    <a href="https://duzce.edu.tr">Düzce Üniversitesi</a>
                    <a href="https://bilgiislem.edu.tr">Bilgi İşlem Daire Başkanlığı</a>
                    v.1.71 - 2020
                </div>
            </section>
        </footer>
        <script src="~/js/jquery-3.3.1.min.js"></script>
        <script src="~/js/popper.min.js"></script>
        <script src="~/js/bootstrap.min.js"></script>
        <script src="~/js/jquery.sticky.js"></script>
        <script src="~/js/main.js"></script>
        @await RenderSectionAsync("Scripts", required: false)

    </div>
   
</body>
</html>