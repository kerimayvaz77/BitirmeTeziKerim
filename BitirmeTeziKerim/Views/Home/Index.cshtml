</head>
<body>

    <section>
        <div>
            <video autoplay="autoplay" loop="loop" style="background-size: auto; margin-left: auto; margin-right: auto; position: absolute; z-index: 9;">
                <source src="~/images/intro.mp4" type="video/mp4" />
            </video>
        </div>

        <img style="cursor: pointer; width: 100%; height:100%;margin-top:50%; z-index: 8;" src="~/images/foto3.png" />
        <div class="container" style="z-index: 10; position: absolute; margin-top: 2%;margin-left:20%;">
            
           

                <div class="row" style="background-color:white">
                   
                        <div class="col-lg-4">
                            <div class="sol">
                                <div id="slayt" class="carousel slide" data-ride="carousel">
                                    <div class="carousel-inner">
                                        @foreach (Duyuru cn131 in Model.duyurulist)
                                        {
                                            <div class="carousel-item active">
                                                <img class="rounded-circle" alt="Cinque Terre" style="height:250px;width:250px;" src="@Html.DisplayFor(modelItem => cn131.Url)">
                                                <h3 style=" color: var(--info); margin-top: 0%;">@Html.DisplayFor(modelItem => cn131.Aciklama)</h3>
                                            </div>

                                            break;
                                        }
                                        @foreach (Duyuru cn131 in Model.duyurulist)
                                        {
                                            <div class="carousel-item">
                                                <img class="rounded-circle" alt="Cinque Terre" style="height:250px;width:250px;" src="@Html.DisplayFor(modelItem => cn131.Url)">
                                                <h3 style=" color: var(--info); margin-top: 0%;">@Html.DisplayFor(modelItem => cn131.Aciklama)</h3>
                                            </div>

                                        }

                                    </div>
                                </div>
                          </div>
                        </div>
                    
                    @foreach (DuyuruLinkTablo cn in Model.duyurulinktablolist)
                    {
                        <div class="col-lg-4">
                            <div class="orta">

                                <iframe src="@Html.DisplayFor(modelItem => cn.KoyulacakLink)" frameborder="0"></iframe>

                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="sag">
                                <iframe src="@Html.DisplayFor(modelItem => cn.KoyulacakLink2)" frameborder="0"></iframe>
                            </div>
                        </div>
                    }
                </div>
            </div>

    </section>

</body>
