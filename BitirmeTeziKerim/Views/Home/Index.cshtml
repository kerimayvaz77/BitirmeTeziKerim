@{
    ViewData["Title"] = "Ana Sayfa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="path/to/font-awesome/css/font-awesome.min.css">
    <link href="~/css/font-awesome.css" rel="stylesheet" />
    <style>

        .sag {
            width: 29%;
            position: relative;
            width: 100%;
            position: relative;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }

        .sol {
            background: var(--white);
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            width: 100%;
            margin: 5px auto;
            height: 370px;
            padding: 18px;
            -webkit-box-shadow: 0px 0px 9px 0px rgba(50, 50, 50, 0.35);
            -moz-box-shadow: 0px 0px 9px 0px rgba(50, 50, 50, 0.35);
            box-shadow: 0px 0px 9px 0px rgba(50, 50, 50, 0.35);
            margin: 1%;
        }
        .sol img{
            width:150px;
            height:170px;
            margin-right:40%;
        }
          

        .orta {
            background: var(--white);
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            width: 100%;
            margin: 5px auto;
            height: 370px;
            padding: 18px;
            -webkit-box-shadow: 0px 0px 9px 0px rgba(50, 50, 50, 0.35);
            -moz-box-shadow: 0px 0px 9px 0px rgba(50, 50, 50, 0.35);
            box-shadow: 0px 0px 9px 0px rgba(50, 50, 50, 0.35);
            margin: 1%;
        }

        .sag {
            background: var(--white);
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            width: 100%;
            margin: 5px auto;
            height: 370px;
            padding: 18px;
            -webkit-box-shadow: 0px 0px 9px 0px rgba(50, 50, 50, 0.35);
            -moz-box-shadow: 0px 0px 9px 0px rgba(50, 50, 50, 0.35);
            box-shadow: 0px 0px 9px 0px rgba(50, 50, 50, 0.35);
            margin: 1%;
        }

        .orta iframe {
            width: 80%;
            height: 80%;
        }

        .sag iframe {
            width: 80%;
            height: 80%;
        }
        .carousel-inner img {
            width: 100%;
            height: 350px;
        }

